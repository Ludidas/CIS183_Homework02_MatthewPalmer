<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customCell_v"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_v_customCell_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Red:"
        android:textColor="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_customCell_redNum"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_v_customCell_redNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_red"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_customCell_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Green:"
        android:textColor="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_customCell_greenNum"
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_redNum" />

    <TextView
        android:id="@+id/tv_v_customCell_greenNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_green"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_customCell_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Blue:"
        android:textColor="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_customCell_blueNum"
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_greenNum" />

    <TextView
        android:id="@+id/tv_v_customCell_blueNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_customCell_hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Hex:"
        android:textColor="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_customCell_hexCode"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_v_customCell_hexCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/tv_v_customCell_hex"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_customCell_red" />
</androidx.constraintlayout.widget.ConstraintLayout>